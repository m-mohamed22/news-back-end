{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves the selected article",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 100,
          "comment_count": 11
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the vote count for the selected article",
    "ids": ["1", "2", "3", "..."],
    "exampleRequest": { "inc_votes": 1 },
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": 17627563562,
          "votes": 101
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of usernames",
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge"
        },
        {
          "username": "icellusedkars"
        },
        {
          "username": "rogersop"
        },
        {
          "username": "lurker"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comment_count": {
    "description": "serves the selected article with the comment_count appended",
    "ids": ["1", "2", "3", "..."],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": 167253271536,
          "votes": 100,
          "comment_count": 11
        }
      ]
    }
  },
  "GET /api/articles updated": {
    "description": "serves an array of articles with the comment_count appended",
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": 167253271536,
          "votes": 100,
          "comment_count": 11
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of the comments for the selected article",
    "ids": ["1", "2", "3", "..."],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 10,
          "body": "git push origin master",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": 12653472732
        },
        {
          "comment_id": 11,
          "body": "Ambidextrous marsupial",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": 126534727765
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a new comment for the selected article with the provided request body inserted",
    "ids": ["1", "2", "3", "..."],
    "request-body": {
      "username": "icellusedkars",
      "body": "My code is broken."
    },
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 19,
          "body": "My code is broken.",
          "article_id": 2,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": 1265734627
        }
      ]
    }
  },
  "GET /api/articles?queries": {
    "description": "serves an array of articles sorted by column title and ordered by ascending or descending as selected",
    "queries": [
      "?sort_by= [created_at, article_id, title, topic, author, votes or comment_count]",
      "?order= [ASC or DESC]",
      "Defaults to created_at, descending"
    ],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 19,
          "body": "My code is broken.",
          "article_id": 2,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": 1265734627
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "ids": ["1", "2", "3", "..."],
    "description": "deletes the specified comment",
    "exampleResponse": {
      "articles": [
        {
          "204": "no content"
        }
      ]
    }
  }
}
